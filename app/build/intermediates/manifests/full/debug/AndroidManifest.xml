<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.darkeet.android.demo"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name="me.darkeet.android.demo.app.AppContext"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.ApiDemo" >
        <activity android:name="me.darkeet.android.demo.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.darkeet.android.demo.activity.CheeseActivity"
            android:label="@string/activity_compat_sample" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DARKEET_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name="me.darkeet.android.demo.activity.CheeseDetailActivity" />
        <activity
            android:name="me.darkeet.android.demo.activity.RecyclerViewActivity"
            android:label="@string/activity_compat_recyclerview" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DARKEET_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.darkeet.android.demo.activity.HomeActivity"
            android:label="@string/activity_sample_homepage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DARKEET_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.darkeet.android.demo.activity.ViewActivity"
            android:label="@string/activity_compat_view" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DARKEET_SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name="me.darkeet.android.demo.activity.ResultActivity" />
        <activity android:name="me.darkeet.android.demo.activity.MapViewerActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="map"
                    android:scheme="wuxian" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.darkeet.android.demo.zing.view.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/zing_scanbar"
            android:screenOrientation="portrait" />
        <activity android:name="me.darkeet.android.demo.crop.CropImageActivity" />

        <service
            android:name="me.darkeet.android.demo.service.SocketService"
            android:process=":listen" />
        <service
            android:name="me.darkeet.android.demo.service.NotificationService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>